{
    "compilerOptions": {
        "lib": ["es2019", "DOM"],
        "declaration": true,
        "sourceMap": true,
        "strict": true,
        "importsNotUsedAsValues": "error",
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
    },
    "include": ["out/**/*"],
    "exclude": ["node_modules"]
}
